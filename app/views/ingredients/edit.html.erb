<div class="container">
  <div class="columns is-multiline">
    <div class="column is-6 is-offset-3">
      <div class="content is-size-6">
        <h2>Edit Instruction</h2>
      </div>
    </div>

    <div class="column is-6 is-offset-3">
      <article class="media">
        <div class="media-content">
          <%= form_with model: [@recipe, @ingredient], local: true do |form| %>
            <div class="field">
              <p class="control">
                <%= form.text_field :component, class: "input", placeholder: 'Component' %>
              </p>
            </div>

            <nav class="level">
              <div class="level-left">
              </div>
              <div class="level-right">
                <div class="level-item">
                  <%= form.submit "Update Ingredient", class: 'button is-warning' %>
                </div>
                <div class="level-item">
                  <%= link_to "Cancel", recipe_path(@recipe), class: 'button is-light' %>
                </div>
              </div>
            </nav>
          <% end %>
        </div>
      </article>
    </div>
  </div>
</div>
