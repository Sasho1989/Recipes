<div class="container">
  <div class="columns is-multiline">
    <div class="column is-5 is-offset-5">
      <div class="content is-size-4">
        <h2>All Recipes</h2>
      </div>
    </div>
    <% @recipes.each do |recipe| %>
      <div class="column is-7 is-offset-3">
        <div class="card">
          <header class="card-header">
            <p class="card-header-title">
              <%= recipe.title %>
            </p>
          </header>
          <div class="card-content">
            <div class="content">
              <p><%= recipe.description %></p>
            </div>
          </div>
          <footer class="card-footer">
            <%= link_to "Open", recipe_path(recipe), class: "card-footer-item" %>

            <% if logged_in? && equal_with_current_user?(recipe.user) %>
              <%= link_to "Edit", edit_recipe_path(recipe), class: "card-footer-item" %>
            <% end %>

            <% if logged_in? && equal_with_current_user?(recipe.user) %>
              <%= link_to "Delete", recipe_path(recipe), method: :delete,
                  data: { confirm: "Are you sure you want to delete this recipe?" },
                  class: "card-footer-item" %>
            <% end %>
          </footer>
        </div>
      </div>
    <% end %>
  </div>
</div>
